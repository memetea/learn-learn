{
    "swagger": "2.0",
    "info": {
        "description": "This is an API for managing question banks.",
        "title": "Question Bank API",
        "contact": {
            "name": "API Support",
            "url": "http://www.swagger.io/support",
            "email": "support@swagger.io"
        },
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/question_banks": {
            "get": {
                "description": "获取所有的题库",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "QuestionBank"
                ],
                "summary": "获取题库列表",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/models.QuestionBank"
                            }
                        }
                    }
                }
            },
            "post": {
                "description": "新增题库",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "QuestionBank"
                ],
                "summary": "新增题库",
                "parameters": [
                    {
                        "description": "题库名称",
                        "name": "name",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.QuestionBank"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/models.QuestionBank"
                        }
                    },
                    "400": {
                        "description": "Invalid input",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Failed to create question bank",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/question_banks/{bank_id}/questions": {
            "get": {
                "description": "获取某个题库中的所有问题",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Question"
                ],
                "summary": "获取题库中的问题",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "题库ID",
                        "name": "bank_id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/models.Question"
                            }
                        }
                    },
                    "404": {
                        "description": "Question bank not found",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/question_banks/{id}": {
            "put": {
                "description": "根据ID修改题库",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "QuestionBank"
                ],
                "summary": "修改题库",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "题库ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "题库名称",
                        "name": "name",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.QuestionBank"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/models.QuestionBank"
                        }
                    },
                    "400": {
                        "description": "Invalid input",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "Question bank not found",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Failed to update question bank",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/questions/{question_id}": {
            "get": {
                "description": "获取某个问题的详细信息，包括答案选项",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Question"
                ],
                "summary": "获取问题详情",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "问题ID",
                        "name": "question_id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/models.Question"
                        }
                    },
                    "404": {
                        "description": "Question not found",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "models.AnswerOption": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "is_correct": {
                    "type": "boolean"
                },
                "option_text": {
                    "type": "string"
                },
                "question_id": {
                    "type": "integer"
                }
            }
        },
        "models.Question": {
            "type": "object",
            "properties": {
                "answer_options": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/models.AnswerOption"
                    }
                },
                "content": {
                    "type": "string"
                },
                "explanation": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "question_bank_id": {
                    "type": "integer"
                },
                "question_type_id": {
                    "type": "integer"
                }
            }
        },
        "models.QuestionBank": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                }
            }
        }
    }
}